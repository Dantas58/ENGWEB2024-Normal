extends layout

block content
  body
      header.w3-container.w3-teal
        h1 Informações Contratos

      table.w3-table-all.w3-hoverable
        thead
          tr.w3-teal
            th idcontrato
            th objectoContrato
            th dataCelebracaoContrato
            th precoContratual
            th NIPC_entidade_comunicante 
            th entidade_comunicante
        tbody
          each contrato in contratos
            tr
              td
                a(href=`/${contrato._id}`) #{contrato._id}
              td #{contrato.objectoContrato}
              td #{contrato.dataCelebracaoContrato}
              td #{contrato.precoContratual}
              td
                a(href=`/entidades/${contrato.NIPC_entidade_comunicante}` class="w3-text-teal")= contrato.NIPC_entidade_comunicante
              td= contrato.entidade_comunicante