extends layout

block content
    body
        header.w3-container.w3-teal
          h1 Detalhes do Contrato: #{contrato._id}

        table.w3-table-all.w3-hoverable
          thead
            tr.w3-teal
              th Campo
              th Valor
          tbody
            tr
              td nAnuncio
              td #{contrato.nAnuncio}
            tr
              td Tipo de Procedimento
              td #{contrato.tipoprocedimento}
            tr
              td Obejcto Contrato
              td #{contrato.objectoContrato}
            tr
              td Data de Publicação
              td #{contrato.dataPublicacao}
            tr
              td Data de Celebração
              td #{contrato.dataCelebracaoContrato}
            tr
              td Preço Contratual
              td #{contrato.precoContratual}
            tr
              td Prazo de Execução
              td #{contrato.prazoExecucao}
            tr
              td NIPC da entidade comunicante
              td #{contrato.NIPC_entidade_comunicante}
            tr
              td Entidade Comunicante
              td #{contrato.entidade_comunicante}
            tr
              td Fundamentacao
              td #{contrato.fundamentacao}
    div.w3-container.w3-teal
      a.w3-btn.w3-ripple.w3-teal(href="/") Voltar à página principal